---
const pages = [
  {
    href: "#services",
    value: "خدماتنا",
  },
  {
    href: "#projects",
    value: "مشاريع مختارة",
  },
  {
    href: "#aboutus",
    value: "من نحن",
  },
];
---

<nav id="nav">
  <ul>
    {
      pages.map(({ href, value }) => (
        <li>
          <a href={href}>{value}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    grid-area: nav;
  }

  ul {
    list-style: none;
    display: flex;
    gap: 1.5rem;
  }

  a {
    text-underline-offset: 1.75rem;
  }

  @media only screen and (min-width: 650px) {
    nav {
      place-self: center;
    }

    a:hover {
      text-decoration: underline;
    }
  }

  @media only screen and (max-width: 649px) {
    nav {
      display: none;
    }
    nav.expanded {
      display: block;
    }
    ul {
      flex-direction: column;
      gap: 1.5rem;
      padding-top: 1rem;
      padding-inline-start: 0;
    }
  }
</style>
