<button id="hamburger" class="btn tertiary shadow md">
  <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <rect x="2" y="5" width="20" height="2" rx="1"></rect>
    <rect x="2" y="11" height="2" rx="1"></rect>
    <rect x="2" y="17" height="2" rx="1"></rect>
  </svg>
</button>

<style>
  #hamburger {
    grid-area: menu;
    place-self: center end;
    margin-right: 0.5rem;
    border-radius: var(--br-sm);
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  svg > rect {
    height: 2px;
    border-radius: 1px;
    fill: rgb(var(--text));
    transition: width var(--tr-duration) var(--tr-tr-fn);
  }

  svg > rect:nth-child(1) {
    width: 20px;
  }
  svg > rect:nth-child(2) {
    width: 11px;
  }
  svg > rect:nth-child(3) {
    width: 16px;
  }

  @media only screen and (min-width: 650px) {
    #hamburger {
      display: none;
    }
  }
</style>

<style is:global>
  body.expanded-menu #hamburger > svg > rect {
    width: 20px;
  }
</style>
